{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container-fluid">
    <div class="row">

        <form action="{{ path("fos_user_security_check") }}" method="post" class="col-md-6 offset-3">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}

            <div class="container-fluid">
                <div class="form-group row">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
                </div>

                <div class="form-group row">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input class="form-control" type="password" id="password" name="_password" required="required"/>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6 offset-sm-3">
                        <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6 offset-sm-3">
                        <input class="btn btn-primary ce" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>